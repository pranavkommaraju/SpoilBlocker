{
    "manifest_version": 3,
    "name": "SpoilBlocker",
    "description": "Block Spoilers for Movies Playing in Theaters",
    "version": "1.0",
    "permissions": ["activeTab"],
    "action": {
        "default_title": "SpoilBlocker",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js" : ["movie.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
}